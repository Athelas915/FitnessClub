@page
@model FitnessClub.Pages.DataManagement.SessionEnrollments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SessionEnrollment[0].PersonID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionEnrollment[0].Session)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionEnrollment[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionEnrollment[0].CreatedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SessionEnrollment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-PersonID="@item.PersonID" asp-route-SessionID="@item.SessionID">Edit</a> |
                <a asp-page="./Details" asp-route-PersonID="@item.PersonID" asp-route-SessionID="@item.SessionID">Details</a> |
                <a asp-page="./Delete" asp-route-PersonID="@item.PersonID" asp-route-SessionID="@item.SessionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
