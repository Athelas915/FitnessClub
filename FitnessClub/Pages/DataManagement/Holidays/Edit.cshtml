@page
@model FitnessClub.Pages.DataManagement.Holidays.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Holiday</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Holiday.HolidayID" />
            <div class="form-group">
                <label asp-for="Holiday.Start" class="control-label"></label>
                <input asp-for="Holiday.Start" class="form-control" />
                <span asp-validation-for="Holiday.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holiday.Finish" class="control-label"></label>
                <input asp-for="Holiday.Finish" class="form-control" />
                <span asp-validation-for="Holiday.Finish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holiday.EmployeeID" class="control-label"></label>
                <select asp-for="Holiday.EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
                <span asp-validation-for="Holiday.EmployeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holiday.CreatedBy" class="control-label"></label>
                <input asp-for="Holiday.CreatedBy" class="form-control" />
                <span asp-validation-for="Holiday.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holiday.CreatedOn" class="control-label"></label>
                <input asp-for="Holiday.CreatedOn" class="form-control" />
                <span asp-validation-for="Holiday.CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
