@page

@using FitnessClub.Areas.CustomerPanel.Pages;
@model CoachRatingModel
@{
    ViewData["Title"] = "Coach Rating";
    ViewData["ActivePage"] = CustomerPanelNavPages.CoachRating;
    Layout = "./_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-9">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Sessions.Keys.First().SessionType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sessions.Keys.First().Coach.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sessions.Keys.First().Weekday)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sessions.Keys.First().Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sessions.Keys.First().StartTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sessions.Keys.First().Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sessions.Keys.First().Room)
                    </th>
                    <th>
                        Rate:
                    </th>
                    <th>
                        Submit
                    </th>
            </thead>
            <tbody>
                @{
                    var i = 0;
                }
                @foreach (var item in Model.Sessions.Keys)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SessionType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Coach.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Weekday)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Room)
                        </td>
                        <td>
                            <form id="@i" method="post">
                                <input asp-for="@Model.ChosenSessionID" type="hidden" value="@item.SessionID" />
                                <select asp-for="@Model.Rating" class="bigger-select form-control">
                                    <option value=0>0</option>
                                    <option value=1>1</option>
                                    <option value=2>2</option>
                                    <option value=3>3</option>
                                    <option value=4>4</option>
                                    <option value=5>5</option>
                                </select>
                            </form>
                        </td>
                        <td>
                            <input form="@i" type="submit" value="Rate" class="btn btn-primary" asp-route-id="@i" />
                        </td>
                    </tr>
                    { i++; }
                }
            </tbody>
        </table>
    </div>
</div>