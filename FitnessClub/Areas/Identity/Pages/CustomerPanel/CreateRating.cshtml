@page
@model FitnessClub.Areas.Identity.Pages.CustomerPanel.CreateRatingModel
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div>
    <h4>Rate Coach</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChosenSession.SessionType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChosenSession.SessionType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChosenSession.CoachFullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChosenSession.CoachFullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChosenSession.Weekday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChosenSession.Weekday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChosenSession.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChosenSession.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChosenSession.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChosenSession.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChosenSession.FinishTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChosenSession.FinishTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChosenSession.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChosenSession.Room)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoachRating.Rating)
        </dt>
        <dd class="col-sm-10">
            <form>
                <select asp-for="@Model.CoachRating.Rating" class="bigger-select form-control">
                    <option value=0>0</option>
                    <option value=1>1</option>
                    <option value=2>2</option>
                    <option value=3>3</option>
                    <option value=4>4</option>
                    <option value=5>5</option>
                </select>
                <button type="submit" class="btn btn-primary">Rate</button>
            </form>
        </dd>
    </dl>
</div>