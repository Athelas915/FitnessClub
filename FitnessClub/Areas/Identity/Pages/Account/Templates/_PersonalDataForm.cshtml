@model FitnessClub.Data.Models.Customer

<body>
    <div class="col-md-4 col-md-offset-2">
        <h4>Personal Information</h4>
        <hr />
        <div class="form-group">
            <label asp-for="@Model.FirstName" class="control-label"></label>
            <input asp-for="@Model.FirstName" class="form-control" />
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.LastName" class="control-label"></label>
            <input asp-for="@Model.LastName" class="form-control" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Birthdate" class="control-label"></label>
            <input type="date" asp-for="@Model.Birthdate" class="form-control" />
            <span asp-validation-for="@Model.Birthdate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Gender" class="control-label"></label>
            <select asp-for="@Model.Gender" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
    </div>
</body>